<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        xmlns:vms="clr-namespace:ViewModel;assembly=ViewModel"
        mc:Ignorable="d"
        Title="Ping View" Height="450" Width="800"
        Left="{Binding PositionX, Mode=TwoWay}" Top="{Binding PositionY, Mode=TwoWay}">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type vms:PlayerViewModel}">
                <local:PlayerWindow/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:RechercherViewModel}">
                <local:RechercherWindow/>
            </DataTemplate>
        </Grid.Resources>

        <ContentControl Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>
