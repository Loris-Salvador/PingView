<Window x:Class="View.ParametreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="ParametreWindow" Height="200" Width="200"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left">
            <TextBlock Text="Path Registry" Margin="0,0,10,0"/> 
            <TextBox MinWidth="30"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left">
            <TextBlock Text="Index Joueur Principal" Margin="0,0,10,0"/>
            <TextBox MinWidth="30"/>
        </StackPanel>
    </Grid>
</Window>
